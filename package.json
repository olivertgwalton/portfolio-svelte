{
	"name": "portfolio",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"start": "bun ./build/index.js",
		"dev": "bun x --bun vite dev",
		"build": "bun x --bun vite build",
		"preview": "bun x --bun vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "bun biome check . && bun eslint .",
		"format": "bun biome format --write .",
		"build:wasm": "mkdir -p static/wasm && cd rust-grid && RUSTFLAGS='-C target-feature=+simd128' wasm-pack build --target web --out-dir ../src/lib/wasm && mv ../src/lib/wasm/rust_grid_bg.wasm ../static/wasm/"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.15",
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^9.39.2",
		"@sveltejs/enhanced-img": "^0.10.2",
		"@sveltejs/kit": "^2.51.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@types/bun": "^1.3.9",
		"eslint": "^9.39.2",
		"eslint-plugin-svelte": "^3.15.0",
		"globals": "^17.3.0",
		"katex": "^0.16.28",
		"mdast-util-to-string": "^4.0.0",
		"mdsvex": "^0.12.6",
		"reading-time": "^1.5.0",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-katex": "3.0.0",
		"rehype-slug": "^6.0.0",
		"remark-math": "3.0.1",
		"sharp": "^0.34.5",
		"shiki": "^3.22.0",
		"svelte": "^5.51.0",
		"svelte-adapter-bun": "^1.0.1",
		"svelte-check": "^4.4.0",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.55.0",
		"unist-util-visit": "^5.1.0",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"@fontsource-variable/jetbrains-mono": "^5.2.8",
		"@fontsource-variable/manrope": "^5.2.8",
		"@fontsource-variable/space-grotesk": "^5.2.10",
		"@skeletonlabs/skeleton": "^4.12.0",
		"@skeletonlabs/skeleton-svelte": "^4.12.0",
		"@takumi-rs/core": "^0.68.2",
		"@takumi-rs/helpers": "^0.68.2",
		"phosphor-svelte": "^3.1.0"
	}
}
